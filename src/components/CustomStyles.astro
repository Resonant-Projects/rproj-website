---
// Editorial typography: Playfair Display (headings) + Source Sans 3 (body) + Inter (UI)
import '@fontsource-variable/playfair-display';
import '@fontsource-variable/source-sans-3';
import '@fontsource-variable/inter';
---

<style is:inline>
  :root {
    /* Font Variables - Editorial Typography System */
    --font-family-primary: 'Source Sans 3 Variable', ui-sans-serif, system-ui;
    --font-family-serif: 'Playfair Display Variable', ui-serif, Georgia;
    --font-family-heading: 'Playfair Display Variable', ui-serif, Georgia;
    --font-family-ui: 'Inter Variable', ui-sans-serif, system-ui;

    /* Design System Variables */
    --radius: 0.5rem;

    /* Light Theme Colors - Professional violet palette with neutral gray-violet tones */
    --color-background: var(--color-brand-50, #f5f4f7);
    --color-foreground: var(--color-brand-900, #1c101e);
    --color-card: var(--color-brand-50, #f5f4f7);
    --color-card-foreground: var(--color-brand-900, #1c101e);
    --color-popover: var(--color-brand-50, #f5f4f7);
    --color-popover-foreground: var(--color-brand-900, #1c101e);
    --color-primary: var(--color-brand-600, #5a2054);
    --color-primary-foreground: var(--color-brand-50, #f5f4f7);
    --color-secondary: var(--color-brand-400, #8a6e8c);
    --color-secondary-foreground: var(--color-brand-50, #f5f4f7);
    --color-muted: var(--color-brand-200, #cdc8d6);
    --color-muted-foreground: var(--color-brand-700, #451844);
    --color-accent: var(--color-brand-500, #6e2765);
    --color-accent-foreground: var(--color-brand-50, #f5f4f7);
    --color-border: var(--color-brand-200, #cdc8d6);
    --color-input: var(--color-brand-200, #cdc8d6);
    --color-outline: var(--color-brand-500, #6e2765);
    --color-ring: var(--color-brand-600, #5a2054);

    /* Status Colors - Enhanced for better contrast */
    --color-info: #0ea5e9;
    --color-info-foreground: #0c4a6e;
    --color-success: #22c55e;
    --color-success-foreground: #14532d;
    --color-warning: #f59e0b;
    --color-warning-foreground: #92400e;
    --color-error: #dc2626;
    --color-error-foreground: #ffffff;

    /* Legacy AstroWind Variables (for backward compatibility) - Updated to use brand colors */
    --aw-font-sans: var(--font-family-primary);
    --aw-font-serif: var(--font-family-serif);
    --aw-font-heading: var(--font-family-heading);
    --aw-color-primary: var(--color-primary);
    --aw-color-secondary: var(--color-secondary);
    --aw-color-accent: var(--color-accent);
    --aw-color-text-heading: var(--color-foreground);
    --aw-color-text-default: var(--color-brand-800, #2e1430);
    --aw-color-text-muted: var(--color-brand-600, #5a2054);
    --aw-color-text-page: var(--color-brand-800, #2e1430);
    --aw-color-bg-page: var(--color-background);
    --aw-color-bg-page-dark: var(--color-brand-900, #1c101e);

    /* Text Selection */
    ::selection {
      background-color: var(--color-accent);
      color: var(--color-accent-foreground);
    }
  }

  .dark {
    /* Dark Theme Colors - Professional violet palette with proper contrast */
    --color-background: var(--color-brand-900, #1c101e);
    --color-foreground: var(--color-brand-100, #e8e6ec);
    --color-card: var(--color-brand-900, #1c101e);
    --color-card-foreground: var(--color-brand-100, #e8e6ec);
    --color-popover: var(--color-brand-900, #1c101e);
    --color-popover-foreground: var(--color-brand-100, #e8e6ec);
    --color-primary: var(--color-brand-200, #cdc8d6);
    --color-primary-foreground: var(--color-brand-950, #110a14);
    --color-secondary: var(--color-brand-600, #5a2054);
    --color-secondary-foreground: var(--color-brand-100, #e8e6ec);
    --color-muted: var(--color-brand-700, #451844);
    --color-muted-foreground: var(--color-brand-400, #8a6e8c);
    --color-accent: var(--color-brand-300, #a89bb3);
    --color-accent-foreground: var(--color-brand-800, #2e1430);
    --color-border: var(--color-brand-800, #2e1430);
    --color-input: var(--color-brand-800, #2e1430);
    --color-outline: var(--color-brand-200, #cdc8d6);
    --color-ring: var(--color-brand-300, #a89bb3);

    /* Status Colors (Dark) - Enhanced for better contrast */
    --color-info: #38bdf8;
    --color-info-foreground: #0c4a6e;
    --color-success: #4ade80;
    --color-success-foreground: #14532d;
    --color-warning: #fbbf24;
    --color-warning-foreground: #92400e;
    --color-error: #ef4444;
    --color-error-foreground: #ffffff;

    /* Legacy AstroWind Variables (Dark Theme) - Updated to use brand colors */
    --aw-color-text-heading: var(--color-foreground);
    --aw-color-text-default: var(--color-brand-100, #e8e6ec);
    --aw-color-text-muted: var(--color-brand-400, #8a6e8c);
    --aw-color-bg-page: var(--color-background);

    /* Dark Text Selection */
    ::selection {
      background-color: var(--color-accent);
      color: var(--color-accent-foreground);
    }
  }

  /* CSS Custom Property Validation - Ensures brand colors are available */
  @supports not (color: var(--color-brand-50)) {
    :root {
      /* Fallback brand color palette if not loaded - Professional violet with neutral grays */
      --color-brand-50: #f5f4f7;
      --color-brand-100: #e8e6ec;
      --color-brand-200: #cdc8d6;
      --color-brand-300: #a89bb3;
      --color-brand-400: #8a6e8c;
      --color-brand-500: #6e2765;
      --color-brand-600: #5a2054;
      --color-brand-700: #451844;
      --color-brand-800: #2e1430;
      --color-brand-900: #1c101e;
      --color-brand-950: #110a14;
    }
  }

  /* Responsive Typography Scale */
  @media (max-width: 768px) {
    :root {
      font-size: 16px;
    }
  }

  @media (min-width: 1024px) {
    :root {
      font-size: 18px;
    }
  }

  @media (min-width: 1536px) {
    :root {
      font-size: 20px;
    }
  }

  /* Enhanced accessibility and contrast improvements */
  @media (prefers-reduced-motion: reduce) {
    * {
      animation-duration: 0.01ms !important;
      animation-iteration-count: 1 !important;
      transition-duration: 0.01ms !important;
    }
  }

  /* High contrast mode support */
  @media (prefers-contrast: high) {
    :root {
      --color-border: var(--color-brand-900, #2c1028);
      --color-outline: var(--color-brand-900, #2c1028);
    }

    .dark {
      --color-border: var(--color-brand-100, #f0e8ee);
      --color-outline: var(--color-brand-100, #f0e8ee);
    }
  }

  /* Print styles optimization */
  @media print {
    :root {
      --color-background: white;
      --color-foreground: black;
      --color-primary: black;
      --color-secondary: #666;
    }
  }
</style>
