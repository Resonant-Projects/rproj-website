---
export const prerender = true;

import CallToAction from '~/components/widgets/CallToAction.astro';
import Content from '~/components/widgets/Content.astro';
import Features2 from '~/components/widgets/Features2.astro';
import Hero from '~/components/widgets/Hero.astro';
import Note from '~/components/widgets/Note.astro';
import Steps from '~/components/widgets/Steps.astro';
import Layout from '~/layouts/PageLayout.astro';
import { getPermalink } from '~/utils/permalinks';

const metadata = {
  title: 'Design, Music, Photo & Film Services',
  description:
    'Tech consulting, music mastering, professional photography, and film finishing. Creative services for solopreneurs, artists, and filmmakers. From vision to vibration.',
};
---

<Layout metadata={metadata}>
  <Hero
    actions={[
      { variant: 'primary', text: 'Explore Services', href: '#services', icon: 'tabler:arrow-down' },
      { variant: 'secondary', text: 'Start a Project', href: getPermalink('/contact#form'), icon: 'tabler:input-spark' },
    ]}
    image={{ src: '~/assets/images/purple_scale_river.svg', alt: 'Resonant Projects creative frequency visualization' }}
    gradientBg={true}
    showScrollIndicator={true}
  >
    <Fragment slot="title">
      From Vision to <span class="text-accent">Vibration</span>
    </Fragment>
    <Fragment slot="subtitle">
      <span class="font-bold">Four disciplines, one creative philosophy.</span>
      <span class="block">We help creators and businesses bring their work to life through technology, sound, light, and motion.</span>
    </Fragment>
  </Hero>

  <Content
    tagline="Why Resonant Projects"
    title="One Creative Vision, Four Disciplines"
    content="<p class='text-lg mb-4'>Great creative work happens when technical precision meets artistic sensitivity. Whether it is optimizing a business workflow, finishing a music track, capturing a portrait, or color grading a film — the goal is the same: help your work achieve its fullest resonance.</p><p class='text-lg'>With decades of cross-disciplinary experience in engineering, audio production, photography, and post-production, every service draws on a deep well of integrated creative expertise. That is what makes working with us different.</p>"
    items={[
      {
        title: 'Cross-Disciplinary Expertise',
        description: 'Skills across engineering, audio, photography, and film that inform and strengthen each other.',
        icon: 'tabler:atom',
      },
      {
        title: 'Personalized Approach',
        description: 'No templates or generic packages. Every engagement is tailored to your specific creative goals.',
        icon: 'tabler:heart-handshake',
      },
      {
        title: 'Results That Resonate',
        description: 'Work that does not just meet standards but connects with people at a deeper level.',
        icon: 'tabler:wave-sine',
      },
    ]}
    image={{ src: '~/assets/images/portrait_by_tutti.jpg', alt: 'Keith Elliott, founder of Resonant Projects' }}
  />

  <Note icon="tabler:brand-craft" title="Every project deserves the right frequency. Let's find yours." />

  <Features2
    id="services"
    tagline="What We Do"
    title="Four Ways We Create <span class='text-accent'>Resonance</span>"
    subtitle="Each service is rooted in the same philosophy — when technical precision meets artistic vision, the result moves people."
    columns={2}
    items={[
      {
        title: 'Resonant Design',
        description:
          'Optimize your creative workflow. We help solopreneurs and small businesses choose the right tools and build automation that works.',
        icon: 'tabler:settings',
        callToAction: { text: 'Learn More', href: getPermalink('/services/design'), variant: 'link', icon: 'tabler:arrow-right' },
      },
      {
        title: 'Resonant Rhythm',
        description:
          'Finish your tracks at their highest potential. Professional mixing, mastering, and music coaching for independent artists.',
        icon: 'tabler:music',
        callToAction: { text: 'Learn More', href: getPermalink('/services/rhythm'), variant: 'link', icon: 'tabler:arrow-right' },
      },
      {
        title: 'Resonant Color',
        description:
          'Tell your visual story with precision. Professional photography that captures emotion — landscapes, portraits, boudoir, maternity, and children.',
        icon: 'tabler:camera',
        callToAction: { text: 'View Portfolio', href: getPermalink('/services/color'), variant: 'link', icon: 'tabler:arrow-right' },
      },
      {
        title: 'Resonant Motion',
        description:
          'Bring your footage to life. Expert post-production sound design and color grading that transforms raw material into polished, professional content.',
        icon: 'tabler:movie',
        callToAction: { text: 'Learn More', href: getPermalink('/services/motion'), variant: 'link', icon: 'tabler:arrow-right' },
      },
    ]}
  />

  <Steps
    tagline="How It Works"
    title="Your Path from Vision to Vibration"
    subtitle="The same proven process powers every service we offer."
    items={[
      {
        title: 'Step 1: <span class="font-medium">Start a Conversation</span>',
        description:
          'Tell us about your goals, your challenges, and what you are trying to create. Fill out our project form or book a discovery call.',
        icon: 'tabler:message-circle',
      },
      {
        title: 'Step 2: <span class="font-medium">Get a Custom Plan</span>',
        description:
          'We listen carefully and design an approach specific to your project. No cookie-cutter packages — just a clear path forward.',
        icon: 'tabler:file-text',
      },
      {
        title: 'Step 3: <span class="font-medium">Create Together</span>',
        description:
          'We get to work. Regular check-ins keep you in the loop, and revisions ensure the result is exactly what you envisioned.',
        icon: 'tabler:tools',
      },
      {
        title: 'Your Work Resonates',
        icon: 'tabler:check',
      },
    ]}
    image={{ src: '~/assets/images/journey-timeline-transparent.png', alt: 'Project journey from start to resonance' }}
  />

  <CallToAction
    title="Ready to Create Something That <span class='text-accent dark:text-white'>Resonates</span>?"
    subtitle="Whether you need technology consulting, music production, photography, or film finishing — let's find the right frequency for your project."
    actions={[
      {
        variant: 'primary',
        text: 'Start Your Project',
        href: getPermalink('/contact#form'),
        icon: 'tabler:input-spark',
      },
    ]}
  />
</Layout>
