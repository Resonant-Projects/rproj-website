---
import { SITE } from 'astrowind:config';
import logoIcon from '@src/assets/favicons/LogoOnly_Inverted_transparent.png';
---

<span class="ml-2 flex items-center self-center whitespace-nowrap text-2xl font-bold md:text-xl rtl:ml-0 rtl:mr-2">
  <img src={logoIcon.src} alt="Logo" class="mr-2 h-8" />
  {SITE?.name}
</span>
